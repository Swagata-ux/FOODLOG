<% content_for :title do %>
  Foodlog <%= DateTime.now.strftime("%B %e, %Y") %>
<% end %>
<div class="columns is-multiline mt-6 is-centered">
  <% @entries.each do |entry| %>
    <div class="column is-one-quarter">
      <div class="card has-background-light">
        <header class="card-header has-background-primary has-text-white">
          <p class="card-header-title is-centered">
            <%= entry.meal_type %>
          </p>
        </header>
        <div class="card-content">
          <div class="content has-text-left">
            <p><span class="has-text-weight-bold"><%= entry.calories %></span> calories</p>
            <p><span class="has-text-weight-bold"><%= entry.proteins %></span> grams of protein</p>
            <p><span class="has-text-weight-bold"><%= entry.carbohydrates %></span> grams of carbohydrates</p>
            <p><span class="has-text-weight-bold"><%= entry.fats %></span> grams of fat</p>
            <p class="is-italic has-text-grey">Logged <%= time_ago_in_words(entry.created_at) %> ago</p>
          </div>
        </div>
        <footer class="card-footer">
          <%= link_to 'Show', entry, class: 'card-footer-item button is-link is-light' %>
          <%= link_to 'Edit', edit_entry_path(entry), class: 'card-footer-item button is-warning is-light' %>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-footer-item button is-danger is-light' %>
        </footer>
      </div>
    </div>
  <% end %>
</div>
<div class="columns is-centered mt-6">
  <%= link_to "View all entries", archives_index_path, class: "button is-link is-outlined is-centered" %>
</div>
