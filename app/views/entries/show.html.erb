<%= render @entry %>
<div class="buttons mt-4">
  <%= link_to "Edit this entry", edit_entry_path(@entry), class: "button is-info" %>
  <%= link_to "Back to entries", entries_path, class: "button is-light" %>
  <%= button_to "Destroy this entry", @entry, method: :delete, class: "button is-danger", data: { confirm: "Are you sure you want to delete this entry?" } %>
</div>
