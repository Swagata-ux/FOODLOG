<div id="<%= dom_id entry %>" class="box p-4 mb-4">
  <h2 class="title is-4 has-text-centered mb-5">Nutritional Information</h2>
  <div class="content mt-4">
    <p>
      <strong>Meal type:</strong>
      <span class="has-text-weight-semibold"><%= entry.meal_type %></span>
    </p>
    <p>
      <strong>Calories:</strong>
      <span class="has-text-weight-semibold"><%= entry.calories %></span>
    </p>
    <p>
      <strong>Proteins:</strong>
      <span class="has-text-weight-semibold"><%= entry.proteins %> g</span>
    </p>
    <p>
      <strong>Carbohydrates:</strong>
      <span class="has-text-weight-semibold"><%= entry.carbohydrates %> g</span>
    </p>
    <p>
      <strong>Fats:</strong>
      <span class="has-text-weight-semibold"><%= entry.fats %> g</span>
    </p>
  </div>
</div>
